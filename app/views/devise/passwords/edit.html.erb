<div class="flex justify-center items-start py-16">
  <div class="w-full sm:w-[360px] md:w-[420px] p-8 bg-white rounded-xl shadow-2xl">

    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">
      <%= t(".reset_password") %>
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mt-6">
        <%= f.label :password, t(".new_password"),
              class: "block text-lg font-medium text-gray-700" %>

        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mt-1">
            (<%= t(".password_minimum", count: @minimum_password_length) %>)
          </p>
        <% end %>

        <%= f.password_field :password,
              autofocus: true,
              autocomplete: "new-password",
              class: "mt-2 w-full rounded-md border-2 border-gray-300
                      bg-white px-4 py-3 text-lg
                      focus:border-sky-500 focus:ring-2 focus:ring-sky-500" %>
      </div>

      <div class="mt-6">
        <%= f.label :password_confirmation, t(".password_confirmation"),
              class: "block text-lg font-medium text-gray-700" %>

        <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "mt-2 w-full rounded-md border-2 border-gray-300
                      bg-white px-4 py-3 text-lg
                      focus:border-sky-500 focus:ring-2 focus:ring-sky-500" %>
      </div>

      <div class="mt-8">
        <%= f.submit t(".change_password"),
              class: "
                w-full py-3 text-lg
                bg-sky-600 text-white rounded-lg
                shadow-md
                hover:bg-sky-500 hover:shadow-lg
                focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2
                transition
              " %>
      </div>
    <% end %>
  </div>
</div>
