<% flash.each do |type, message| %>
  <div class ="flash <%= type %>">
    <div class="mb-6 rounded border px-4 py-3 text-base
      <%= type == "notice" ? "border-sky-300 bg-sky-100 text-sky-800"
                           : "border-red-300 bg-red-100 text-red-800" %>">
      <%= message %>
  </div>
<% end %>
