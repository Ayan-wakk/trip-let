<header class="bg-white shadow-sm fixed top-16 w-full z-50">
  <div class="max-w-2xl mx-auto px-4 py-3">

    <nav
      class="
        flex flex-row                   <!-- ★ 常に横並び -->
        items-center justify-center
        gap-2 sm:gap-6                  <!-- ★ スマホは余白を狭く -->
      "
    >

      <%= link_to "投稿一覧", posts_path,
          class: "
            px-3 sm:px-4                <!-- ★ スマホpadding縮小 -->
            py-2
            rounded-full
            bg-green-500 text-white
            hover:bg-green-400
            text-sm sm:text-base        <!-- ★ スマホ文字サイズ調整 -->
            whitespace-nowrap           <!-- ★ 折返し防止 -->
          " %>

      <%= link_to "投稿する", new_post_path,
          class: "
            px-3 sm:px-4                <!-- ★ スマホpadding縮小 -->
            py-2
            rounded-lg
            bg-blue-500 text-white
            hover:bg-blue-400
            text-sm sm:text-base        <!-- ★ スマホ文字サイズ調整 -->
            whitespace-nowrap           <!-- ★ 折返し防止 -->
          " %>

    </nav>
  </div>
</header>
