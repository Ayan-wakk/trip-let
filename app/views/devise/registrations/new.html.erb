<div class="flex justify-center items-start pt-8">
  <div class="w-full sm:w-[360px] md:w-[420px]  p-8 bg-white rounded-xl shadow-2xl hover:shadow-2xl">    
    <h2 class="text-5xl font-bold text-center text-gray-800 mb-6">
      Sign up
    </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-3">
      <%= f.label :name, class: "block text-xl font-medium text-gray-700" %>
      <%= f.text_field :name, autofocus: true,
          class: "mt-2 w-full rounded-md border-2 border-gray-300
                  bg-white px-4 py-2 text-lg
                  focus:border-sky-500 focus:ring-2 focus:ring-sky-500" %>
    </div>

    <div class="field mb-3">
      <%= f.label :email, class: "block text-xl font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "mt-2 w-full rounded-md border-2 border-gray-300
                  bg-white px-4 py-2 text-lg
                  focus:border-sky-500 focus:ring-2 focus:ring-sky-500" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, class: "block text-xl font-medium text-gray-700" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",
          class: "mt-2 w-full rounded-md border-2 border-gray-300
                  bg-white px-4 py-2 text-lg
                  focus:border-sky-500 focus:ring-2 focus:ring-sky-500" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password_confirmation, class: "block text-xl font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "mt-2 w-full rounded-md border-2 border-gray-300
                  bg-white px-4 py-2 text-lg
                  focus:border-sky-500 focus:ring-2 focus:ring-sky-500" %>
    </div>

    <div class="actions mb-4 pb-3 text-center">
      <%= f.submit "Sign up", class: "text-xl px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-400" %>
    </div>
  <% end %>

  <%#コメントアウト= render "devise/shared/links" %>
  </div>
</div>
