<footer class="bg-blue-400 fixed bottom-0 left-0 w-full h-28 md:h-22 flex items-start justify-center">
  <div class="max-w-2xl mx-auto px-4 py-0">

    <nav
      class="
        flex flex-row                   <!-- ★ 常に横並び -->
        justify-start
        gap-2 sm:gap-7                  <!-- ★ スマホは余白を狭く -->
        mt-3 sm:items-center
      "
    >

      <%= link_to "#",
          class: "
            flex flex-col items-center
            px-4 sm:px-5                <!-- ★ スマホpadding縮小 -->
            py-1 sm:py-1.5
            rounded-lg
            bg-blue-100 text-blue-900
            hover:bg-white
            hover:text-violet-600
            whitespace-nowrap
          " do %>
<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
  <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498 4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 0 0-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0Z" />
</svg>
          <span class="text-xs mt-1 font-bold">マップ</span>
      <% end %>
    
      <%= link_to posts_path,
          class: "
            flex flex-col items-center
            px-4 sm:px-5                <!-- ★ スマホpadding縮小 -->
            py-1 sm:py-1.5
            rounded-lg
            bg-blue-100 text-blue-900
            hover:bg-white
            hover:text-green-400
            whitespace-nowrap
          " do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
        </svg>
          <span class="text-xs mt-1 font-bold">見る</span>
      <% end %>

      <%= link_to new_post_path,
          class: "
            flex flex-col items-center
            px-4 sm:px-5               <!-- ★ スマホpadding縮小 -->
            py-1 sm:py-1.5
            rounded-full
            bg-blue-100 text-blue-900
            hover:bg-white
            hover:text-amber-400
            whitespace-nowrap
          " do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
          <span class="text-xs mt-1 font-bold">作る</span>
      <% end %>

      <%= link_to "#",
          class: "
            flex flex-col items-center
            px-4 sm:px-5                <!-- ★ スマホpadding縮小 -->
            py-1 sm:py-1.5
            rounded-lg
            bg-blue-100 text-blue-900
            hover:bg-white
            hover:text-rose-700
            whitespace-nowrap
          " do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
        </svg>
          <span class="text-xs mt-1 font-bold">いいね</span>
      <% end %>

      <%= link_to posts_path(scope: "my"),
          class: "
            flex flex-col items-center
            px-4 sm:px-5
            py-1 sm:py-1.5
            rounded-lg
            bg-blue-100 text-blue-900
            hover:bg-white
            hover:text-orange-600
            whitespace-nowrap
          " do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
        </svg>
          <span class="text-xs mt-1 font-bold">My</span>
      <% end %>
    </nav>  
  </div>  
</footer>

