<header class="bg-blue-400 shadow-sm" data-controller="menu">
  <div class="container mx-auto flex items-center justify-between py-4 px-4 relative">

    <!-- ロゴ -->
    <div>
      <%= link_to "Trip-let", root_path, class: "text-2xl font-bold text-white" %>
    </div>

    <% if user_signed_in? %>
      <div class="relative">
        <!-- ハンバーガー -->
        <button data-action="click->menu#toggle"
                class="p-2 rounded-md hover:bg-blue-300 text-white"
                aria-label="メニュー">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>

        <!-- メニュー -->
        <div data-menu-target="menu"
             class="hidden absolute right-0 top-full mt-2 w-64
                    rounded-xl bg-white shadow-lg p-4 space-y-2 z-[80]">

          <!-- マイページ -->
          <%= link_to "マイページ", "#", class: "menu-link" %>

          <hr>

          <!-- 情報系 -->
          <%= link_to "お問い合わせ", "#", class: "menu-link" %><br>
          <%= link_to "利用規約", "#", class: "menu-link" %><br>
          <%= link_to "プライバシーポリシー", "#", class: "menu-link" %>

          <hr>

          <!-- ログアウト -->
          <%= button_to "ログアウト",
                        destroy_user_session_path,
                        method: :delete,
                        data: { turbo: false },
                        class: "menu-link hover:bg-red-50" %>

        </div>
        <!-- ★ メニューここまで -->
      </div>
    <% end %>

  </div>
</header>
