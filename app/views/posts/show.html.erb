        </div>

        <!-- ã‚µãƒ ãƒã‚¤ãƒ« -->
        <div class="mt-4 flex gap-2 overflow-x-auto">
          <% @post.images.each_with_index do |image, index| %>
            <% main_variant = image.variant(resize_to_limit: [800, 800], format: :webp).processed %>

